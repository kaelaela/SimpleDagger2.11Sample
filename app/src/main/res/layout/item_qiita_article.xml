<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

    <ImageView
            android:id="@+id/user_thumbnail"
            android:layout_width="@dimen/thumbnail_medium"
            android:layout_height="@dimen/thumbnail_medium"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorPrimaryDark"
            android:contentDescription="@string/user_thumbnail"
            />

    <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_thumbnail"
            android:layout_toRightOf="@id/user_thumbnail"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            />

    <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_title"
            android:layout_toEndOf="@id/user_thumbnail"
            android:layout_toRightOf="@id/user_thumbnail"
            android:textColor="@color/textBlack_50"
            android:textSize="12sp"
            />

</RelativeLayout>